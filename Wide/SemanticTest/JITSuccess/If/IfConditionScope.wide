// Fails if the if condition scope is not correctly nested.
type testty {
    result := bool.pointer;
    ~type() {
         *result = true;
    }
    f() {
        return true;
    }
    type(bool.pointer arg)
        : result(arg) {}
}
Main() {
    result := false;
    if (testty(&result).f()) {}
    return result;
}